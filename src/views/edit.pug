extends base

block content
  h1 Update Video
  form(method="POST")
    input(placeholder="Title", required, type="text", name="title", value=video.title, maxlength=80)
    input(placeholder="Description", required, type="text", name="description", value=video.description, minlength=20)
    input(placeholder="Hashtags, seperated by comma.", required, type="text", value=video.hashtags.join(), name="hashtags")
    input(value="Save", type="submit")